@model IEnumerable<DKMovies.Models.Seat>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Auditorium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowLabel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Auditorium.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowLabel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SeatID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SeatID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SeatID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
